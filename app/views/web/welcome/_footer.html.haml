        %h4
          %i.fa.fa-phone
          = t('.phone')
        %p 555-213-4567
      .col-md-4.contact-details
        %h4
          %i.fa.fa-map-marker
          = t('.office')
        %p
          3481 Melrose Place
          %br>/
          Beverly Hills, CA 90210
      .col-md-4.contact-details
        %h4
          %i.fa.fa-envelope
          Email
        %p
          %a{ href: "mailto:mail@example.com" } mail@example.com
