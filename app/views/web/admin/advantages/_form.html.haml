= javascript_include_tag 'web/advantages'

.row
  .col-md-10
    = simple_form_for @advantage, url: { controller: 'web/admin/advantages', action: action }, html: { class: 'form-horizontal' } do |f|
      = f.input :title, as: :string
      = f.input :text, as: :string
      = f.input :icon, as: :string
      = f.button :submit
      = link_to t('helpers.back'), admin_advantages_path, class: "btn"
