= title
- model_class = City
.city-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @cities.each do |city|
      %tr
        %td= link_to city.id, edit_admin_city_path(city)
        %td= link_to city.title, edit_admin_city_path(city)
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_city_path(city), class: 'btn btn-warning btn-xs'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_city_path(city), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_city_path, class: 'btn btn-primary'
