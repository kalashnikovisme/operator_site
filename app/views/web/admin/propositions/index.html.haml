= title
- model_class = Proposition
.proposition-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:text)
      %th= model_class.human_attribute_name(:begin_date)
      %th= model_class.human_attribute_name(:end_date)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @propositions.each do |proposition|
      %tr
        %td= link_to proposition.id, edit_admin_proposition_path(proposition)
        %td= link_to proposition.text, edit_admin_proposition_path(proposition)
        %td=l proposition.begin_date
        %td=l proposition.end_date
        %td=l proposition.created_at
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_proposition_path(proposition), class: 'btn btn-warning btn-xs'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_proposition_path(proposition), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_proposition_path, class: 'btn btn-primary'
