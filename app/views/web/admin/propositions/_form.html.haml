= javascript_include_tag 'web/propositions'

.row-fluid
  .col-md-10
    = simple_form_for @proposition, url: { controller: 'web/admin/propositions', action: action }, html: { class: 'form-horizontal' } do |f|
      = f.input :text
      = f.input :begin_date, as: :date_picker
      = f.input :end_date, as: :date_picker
      = f.button :submit
      = link_to t('helpers.back'), admin_propositions_path, class: "btn"
