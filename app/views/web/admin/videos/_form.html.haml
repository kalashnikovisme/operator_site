= javascript_include_tag 'web/videos'

.row
  .col-lg-12
    = render 'layouts/web/admin/shared/errors', object: @video
.row
  .col-md-10
    = simple_form_for @video, url: { controller: 'web/admin/videos', action: action }, html: { class: 'form-horizontal' } do |f|
      = f.input :title, as: :string
      = f.input :description, as: :string
      = f.input :link, as: :string
      = f.input :project_type
      = f.input :order_number, input_html: { min: 1 }
      = f.input :show_with_all
      = f.input :state
      = f.association :cities, input_html: { class: :select2 }
      = f.button :submit
      = link_to t('helpers.back'), admin_pages_path, class: "btn"
