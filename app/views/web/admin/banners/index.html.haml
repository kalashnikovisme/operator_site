= title
- model_class = Banner
.banner-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:image)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @banners.each do |banner|
      %tr
        %td= link_to banner.id, edit_admin_banner_path(banner)
        %td= image_tag banner.image
        %td= link_to banner.url, banner.url
        %td= banner.state
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_banner_path(banner), class: 'btn btn-warning btn-xs'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_banner_path(banner), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_banner_path, class: 'btn btn-primary'
