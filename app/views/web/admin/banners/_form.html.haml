= javascript_include_tag 'web/banners'

.row-fluid
  .col-md-10
    = simple_form_for @banner, url: { controller: 'web/admin/banners', action: action }, html: { class: 'form-horizontal' } do |f|
      = f.input :text, as: :string
      = f.input :url, as: :string
      = f.input :text_on_link, as: :string
      = f.input :state_event, as: :state_event
      = f.input :image, as: :image_preview, input_html: { preview_version: :medium }
      = f.button :submit
      = link_to t('helpers.back'), admin_banners_path, class: "btn"
